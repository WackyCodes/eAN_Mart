<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:elevation="6dp"
    android:background="@color/colorWhite">


    <ImageView
        android:id="@+id/hr_viewAll_product_image"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo_black_24dp" />

    <TextView
        android:id="@+id/hr_viewAll_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="3"
        android:padding="2dp"
        android:text=" "
        android:textColor="@color/colorSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hr_viewAll_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:padding="2dp"
        android:text=" "
        android:textColor="@color/colorSecondary"
        app:layout_constraintStart_toStartOf="@+id/hr_viewAll_product_name"
        app:layout_constraintTop_toBottomOf="@+id/hr_viewAll_product_name" />

    <TextView
        android:id="@+id/hr_viewAll_product_cut_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_price"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_price" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorRecyclerBack"
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintEnd_toEndOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintStart_toStartOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintTop_toTopOf="@+id/hr_viewAll_product_cut_price" />

    <TextView
        android:id="@+id/hr_viewAll_product_off_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text=" "
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_cut_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_cut_price" />

    <TextView
        android:id="@+id/hr_viewAll_product_cod_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="@color/colorGreen"
        android:text="Cash on Delivery Available"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hr_viewAll_product_image"
        app:layout_goneMarginBottom="12dp"/>

    <TextView
        android:id="@+id/hr_viewAll_product_stock_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/back_1dp_border_4dp_radius"
        android:backgroundTint="@color/colorYellow"
        android:textColor="@color/colorPrimary"
        android:text=" "
        android:textSize="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/hr_viewAll_product_image"
        app:layout_constraintEnd_toEndOf="@+id/hr_viewAll_product_image" />

</androidx.constraintlayout.widget.ConstraintLayout>