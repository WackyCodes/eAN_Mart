<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="6dp"
    android:background="@drawable/back_rectangle_4dp_layout">


    <ImageView
        android:id="@+id/shop_logo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo_black_24dp" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="3"
        android:padding="2dp"
        android:text="@string/sample_name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shop_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="4dp"
        android:maxLines="2"
        android:padding="2dp"
        android:text="Electronics"
        android:textColor="@color/colorSecondary"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shop_name"
        app:layout_constraintTop_toBottomOf="@+id/shop_name" />

    <TextView
        android:id="@+id/shop_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:padding="2dp"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawableTint="@color/colorDarkViolet"
        android:textColor="@color/colorDarkViolet"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16dp"
        android:text="4.5"
        app:layout_constraintBottom_toBottomOf="@+id/shop_category"
        app:layout_constraintEnd_toStartOf="@+id/shop_category"
        app:layout_constraintTop_toTopOf="@+id/shop_category" />


    <ImageView
        android:id="@+id/shop_veg_type_image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/back_1dp_border_4dp_radius"
        android:padding="2dp"
        android:src="@drawable/dot_default"
        android:tint="@color/colorGreen"
        app:layout_constraintBottom_toBottomOf="@+id/shop_rating"
        app:layout_constraintStart_toStartOf="@+id/shop_name"
        app:layout_constraintTop_toTopOf="@+id/shop_rating" />


</androidx.constraintlayout.widget.ConstraintLayout>