<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shophome.ShopHomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:scaleType="center"
            app:elevation="4dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ToolTheme"
            app:title="AN Electronics"
            app:subtitle="@string/sample_address"
            app:subtitleTextColor="@color/colorWhite"
            app:titleTextColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Shop ID"
                    android:drawableLeft="@drawable/ic_store_mall_directory_black_24dp"
                    android:drawableTint="@color/colorWhite"
                    android:textColorHighlight="@color/colorYellow"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/shop_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="462005012"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
<!--                <TextView-->
<!--                    android:id="@+id/shop_location"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:maxWidth="200dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:maxLines="@integer/config_navAnimTime"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="@string/sample_address"-->
<!--                    android:drawableLeft="@drawable/ic_store_mall_directory_black_24dp"-->
<!--                    android:drawableTint="@color/colorWhite"-->
<!--                    android:textColor="@color/colorWhite"-->
<!--                    android:textAlignment="gravity"-->
<!--                    android:gravity="center"/>-->
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/shop_home_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shop_home_layout_container_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRecyclerBack"
            android:visibility="visible" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>